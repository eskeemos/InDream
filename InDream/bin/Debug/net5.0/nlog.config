<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
    autoReload="true"
    throwExceptions="false"
    internalLogLevel="Warn"
    internalLogFile="c:\InDream\data.log">

	<targets>
		<target xsi:type="File"
				name="fileTarget"
				fileName="c:\InDream\${var:fileName}"
				archiveFileName="c:\InDream\archive\${var:archiveFileName}"
				maxArchiveFiles="7"
				archiveEvery="Day"
				layout="${logger}|${level:uppercase=true}|${date:format=dd/MM/yyyy}|${date:format=HH\:mm\:ss}|${message}" />
		<target xsi:type="Console"
				name="consoleTarget"
				layout="${logger}|${level:uppercase=true}|${date:format=dd/MM/yyyy}|${date:format=HH\:mm\:ss}|${message}" />
		<target xsi:type="Null"
				name="nullTarget" />
	</targets>

	<rules>
		<logger name="INDREAM"
				minLevel="Trace"
				writeTo="consoleTarget" />
		<logger name="INDREAM"
				minLevel="Info"
				writeTo="fileTarget" />
		<logger name="Microsoft.*"
				minlevel="Trace"
				writeTo="nullTarget"
				final="true" />
	</rules>
</nlog>